<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrcode.PgAgreeActivity">
    <TextView
        style="@style/title"
        android:id="@+id/title"
        android:text="@string/qr_use_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/back"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_title_back" />
    </LinearLayout>

    <TextView
        style="@style/text20"
        android:id="@+id/tv1"
        android:text="@string/qr_pg_first"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <TextView
        style="@style/text20"
        android:id="@+id/tv2"
        android:text="@string/qr_pg_status"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/btnJudge"
        app:layout_constraintTop_toBottomOf="@+id/tv1"/>

    <TextView
        style="@style/text20b"
        android:id="@+id/niceStatus"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv2"
        app:layout_constraintTop_toTopOf="@+id/tv2"
        app:layout_constraintBottom_toBottomOf="@+id/tv2"/>

    <TextView
        style="@style/btn_sub"
        android:id="@+id/btnJudge"
        android:layout_width="500dp"
        android:layout_marginTop="10dp"
        android:text="@string/qr_nicepay_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"/>

    <TextView
        style="@style/subtext"
        android:id="@+id/tv3"
        android:text="@string/qr_insurance"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/btnJudge"
        app:layout_constraintTop_toBottomOf="@+id/btnJudge"/>

    <TextView
        style="@style/text18"
        android:id="@+id/tv4"
        android:text="@string/qr_insurance_check"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tv3"/>

    <CheckBox
        android:id="@+id/checkAgree"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/selector_check_big"
        android:button="@null"
        app:layout_constraintEnd_toEndOf="@+id/btnJudge"
        app:layout_constraintTop_toTopOf="@+id/tv4"
        app:layout_constraintBottom_toBottomOf="@+id/tv4"/>

    <TextView
        style="@style/btn_main"
        android:id="@+id/btnQrSet"
        android:layout_marginBottom="40dp"
        android:text="@string/qr_setting_go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>