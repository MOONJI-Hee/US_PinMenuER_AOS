<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".printer.PrinterModelListActivity">

    <TextView
        android:id="@+id/title"
        style="@style/title"
        android:text="@string/printer_title_support"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_title_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ts400b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/te202"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_r6w_b2_main"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_ts400b"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/skl_ts400b" />
        </LinearLayout>

        <TextView
            style="@style/text20"
            android:text="@string/sewoo_recommend" />

        <TextView
            style="@style/text20"
            android:layout_marginTop="5dp"
            android:text="@string/skl_ts400b"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/ck_ts400b"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_check"
            android:button="@null"
            android:checked="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_ts400b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/te202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/sam4s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ts400b"
        app:layout_constraintTop_toTopOf="@+id/ts400b">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_te202"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/skl_te202" />
        </LinearLayout>

        <TextView
            style="@style/text20"
            android:text="@string/sewoo_tech" />

        <TextView
            style="@style/text20"
            android:layout_marginTop="5dp"
            android:text="@string/skl_te202"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/ck_te202"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_check"
            android:button="@null"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_te202"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sam4s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/te202"
        app:layout_constraintTop_toTopOf="@+id/te202">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_sam4s"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/sam4s" />
        </LinearLayout>

        <TextView
            style="@style/text20"
            android:text="@string/gcube" />

        <TextView
            style="@style/text20"
            android:layout_marginTop="5dp"
            android:text="@string/sam4s"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/ck_sam4s"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_check_big"
            android:button="@null"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_sam4s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TextView
        style="@style/text18"
        android:id="@+id/printer_info"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/ts400b"
        app:layout_constraintStart_toStartOf="@+id/support_info"/>

    <TextView
        style="@style/subtext"
        android:id="@+id/support_info"
        android:layout_marginTop="10dp"
        android:text="@string/printer_support_info"
        app:layout_constraintTop_toBottomOf="@+id/printer_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/select"
        android:layout_width="500dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="@string/btn_select"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/bg_btn_r6_grd"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/ts400b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

