<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:background="@color/white">

    <TextView
        style="@style/text_num_b"
        android:id="@+id/tableNo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="10dp"
        android:background="@color/main"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="185" />

    <TextView
        style="@style/text_num"
        android:id="@+id/regdt"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        tools:text="2022.07.28.18:08"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableNo"
        app:layout_constraintBottom_toBottomOf="@+id/tableNo"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tableNo"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        tools:listitem="@layout/list_order_detail"
        tools:itemCount="5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/btn_y"
            android:layout_width="0dp"
            android:paddingBottom="11dp"
            android:paddingHorizontal="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/payment"
            app:layout_constraintBottom_toTopOf="@+id/print">

            <TextView
                style="@style/text16"
                android:id="@+id/tv_total"
                android:text="@string/total"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                style="@style/text_num_b"
                android:id="@+id/gea"
                android:text="@string/zero"
                android:textSize="20sp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@+id/tv_total"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                style="@style/text16"
                android:id="@+id/tv_gea"
                android:text="@string/gea"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@+id/gea"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                style="@style/text_num_b"
                android:id="@+id/price"
                android:gravity="end"
                android:text="@string/zero"
                android:textSize="20sp"
                android:layout_marginHorizontal="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/won" />

            <TextView
                style="@style/text16"
                android:id="@+id/won"
                android:text="@string/won"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/btn_y"
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="15dp"
            android:text="@string/payment"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/print">

        </TextView>

        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="60dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@drawable/bg_cancel_r6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_orderlist_del" />
        </LinearLayout>

        <TextView
            style="@style/btn_sub"
            android:id="@+id/print"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:text="@string/print"
            app:layout_constraintStart_toEndOf="@+id/delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#B3FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tableNo"
        app:layout_constraintBottom_toTopOf="@+id/bottom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_complete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/arrowUp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/tableNo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/arrowDown"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bottom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>