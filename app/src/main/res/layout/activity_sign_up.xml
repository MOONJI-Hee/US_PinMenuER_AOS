<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/title"
        android:id="@+id/title"
        android:text="@string/title_signup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/back"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_title_back" />
    </LinearLayout>

    <TextView
        style="@style/text18"
        android:layout_marginEnd="16dp"
        android:text="@string/email"
        app:layout_constraintEnd_toStartOf="@+id/et_id"
        app:layout_constraintTop_toTopOf="@+id/et_id"
        app:layout_constraintBottom_toBottomOf="@+id/et_id" />

    <EditText
        style="@style/edittext_main"
        android:id="@+id/et_id"
        android:layout_marginTop="80dp"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        style="@style/text20"
        android:id="@+id/tv_id"
        android:paddingHorizontal="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_id"
        app:layout_constraintStart_toStartOf="@+id/et_id"
        app:layout_constraintTop_toTopOf="@+id/et_id" />

    <TextView
        style="@style/btn_small"
        android:id="@+id/btn_check_id"
        android:layout_width="98dp"
        android:layout_marginStart="10dp"
        android:text="@string/check_id"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/et_id"
        app:layout_constraintBottom_toBottomOf="@+id/et_id"
        app:layout_constraintStart_toEndOf="@+id/et_id" />

    <TextView
        style="@style/disable"
        android:id="@+id/check_result"
        android:layout_marginStart="16dp"
        android:text="@string/unable"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/btn_check_id"
        app:layout_constraintTop_toTopOf="@+id/et_id"
        app:layout_constraintBottom_toBottomOf="@+id/et_id"/>

    <TextView
        style="@style/text18"
        android:layout_marginEnd="16dp"
        android:text="@string/password"
        app:layout_constraintEnd_toStartOf="@+id/et_pwd"
        app:layout_constraintTop_toTopOf="@+id/et_pwd"
        app:layout_constraintBottom_toBottomOf="@+id/et_pwd" />

    <EditText
        style="@style/edittext_main"
        android:id="@+id/et_pwd"
        android:layout_marginTop="32dp"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        app:layout_constraintStart_toStartOf="@+id/et_id"
        app:layout_constraintEnd_toEndOf="@+id/et_id"/>

    <TextView
        style="@style/text18"
        android:layout_marginEnd="16dp"
        android:text="@string/arpayo_id"
        app:layout_constraintEnd_toStartOf="@+id/et_arpayo"
        app:layout_constraintTop_toTopOf="@+id/et_arpayo"
        app:layout_constraintBottom_toBottomOf="@+id/et_arpayo" />

    <EditText
        style="@style/edittext_main"
        android:id="@+id/et_arpayo"
        android:layout_marginTop="32dp"
        android:hint="@string/password_hint"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd"
        app:layout_constraintStart_toStartOf="@+id/et_pwd"
        app:layout_constraintEnd_toEndOf="@+id/et_pwd"/>

    <TextView
        style="@style/btn_small"
        android:id="@+id/btn_arpayo"
        android:layout_width="98dp"
        android:layout_marginStart="10dp"
        android:text="@string/link"
        app:layout_constraintTop_toTopOf="@+id/et_arpayo"
        app:layout_constraintBottom_toBottomOf="@+id/et_arpayo"
        app:layout_constraintStart_toEndOf="@+id/et_arpayo" />

    <TextView
        style="@style/disable"
        android:id="@+id/link_result"
        android:text="@string/link_before"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/btn_arpayo"
        app:layout_constraintTop_toTopOf="@+id/btn_arpayo"
        app:layout_constraintBottom_toBottomOf="@+id/btn_arpayo"/>

    <TextView
        style="@style/subtext"
        android:id="@+id/signup_info"
        android:text="@string/signup_info"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/et_arpayo"
        app:layout_constraintTop_toBottomOf="@+id/et_arpayo"/>

    <TextView
        style="@style/btn_main"
        android:id="@+id/save"
        android:layout_marginTop="40dp"
        android:text="@string/signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_info" />

</androidx.constraintlayout.widget.ConstraintLayout>