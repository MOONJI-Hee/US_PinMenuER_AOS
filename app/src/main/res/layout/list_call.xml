<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:background="@color/white">

    <TextView
        style="@style/text20"
        android:id="@+id/tableNo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingHorizontal="10dp"
        android:background="@color/main"
        android:gravity="center_vertical"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="185" />

    <TextView
        style="@style/text18"
        android:id="@+id/regdt"
        android:layout_marginEnd="10dp"
        tools:text="2022.07.28.18:08"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tableNo"
        app:layout_constraintBottom_toBottomOf="@+id/tableNo"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tableNo"
        app:layout_constraintBottom_toTopOf="@+id/complete" />

    <TextView
        style="@style/btn_sub"
        android:id="@+id/complete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="@string/btn_complete"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#B3FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tableNo"
        app:layout_constraintBottom_toTopOf="@+id/complete">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_complete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/arrowUp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tableNo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/arrowDown"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/complete">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>