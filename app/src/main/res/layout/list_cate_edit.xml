<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_cate"
        android:layout_width="158dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_r6w"
        android:layout_marginHorizontal="7.5dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            style="@style/text20"
            android:id="@+id/name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/subName"
            android:layout_marginTop="2dp"
            style="@style/text18"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/left"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7.5dp"
        android:src="@drawable/btn_category_move_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ll_cate"
        app:layout_constraintTop_toTopOf="@id/ll_cate"
        app:layout_constraintBottom_toBottomOf="@id/ll_cate" />
    <ImageView
        android:id="@+id/right"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7.5dp"
        android:src="@drawable/btn_category_move_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ll_cate"
        app:layout_constraintTop_toTopOf="@id/ll_cate"
        app:layout_constraintBottom_toBottomOf="@id/ll_cate" />

</androidx.constraintlayout.widget.ConstraintLayout>