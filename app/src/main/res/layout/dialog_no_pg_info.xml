<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="620dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_r10w">
        <TextView
            android:id="@+id/text1"
            style="@style/text18"
            android:layout_width="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="60dp"
            android:text="@string/dialog_no_pg_info1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/text2"
            style="@style/text18b"
            android:layout_width="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/dialog_no_pg_info2"
            app:layout_constraintStart_toStartOf="@+id/text1"
            app:layout_constraintTop_toBottomOf="@+id/text1"/>
        <TextView
            android:id="@+id/text3"
            style="@style/text18"
            android:layout_width="wrap_content"
            android:text="@string/dialog_no_pg_info3"
            app:layout_constraintStart_toStartOf="@+id/text2"
            app:layout_constraintTop_toBottomOf="@+id/text2"/>
        <ImageView
            android:id="@+id/ic_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:src="@drawable/icon_hamburger"
            app:layout_constraintStart_toEndOf="@+id/text3"
            app:layout_constraintTop_toTopOf="@+id/text3"
            app:layout_constraintBottom_toBottomOf="@+id/text3"/>
        <TextView
            style="@style/text18"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/dialog_no_pg_info4"
            app:layout_constraintStart_toEndOf="@+id/ic_hamburger"
            app:layout_constraintTop_toTopOf="@+id/text3"
            app:layout_constraintBottom_toBottomOf="@+id/text3" />
        <TextView
            style="@style/text18"
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/dialog_no_pg_info5"
            app:layout_constraintStart_toStartOf="@+id/text2"
            app:layout_constraintTop_toBottomOf="@+id/text3" />
        <TextView
            style="@style/btn"
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:layout_marginHorizontal="60dp"
            android:text="@string/confirm"
            app:layout_constraintTop_toBottomOf="@+id/text4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>