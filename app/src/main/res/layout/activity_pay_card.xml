<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f9"
    tools:context="com.wooriyo.us.pinmenuer.payment.PayCardActivity">

    <TextView
        style="@style/title"
        android:id="@+id/title"
        android:text="@string/order_pay_once"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="72dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_title_back" />
    </LinearLayout>

    <TextView
        style="@style/btn_small"
        android:id="@+id/done"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:text="@string/order_pay_finish"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left"
        android:layout_width="362dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            style="@style/text_num_b"
            android:id="@+id/tableNo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="10dp"
            android:background="@color/main"
            android:gravity="center_vertical"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="185" />

        <TextView
            style="@style/text_num"
            android:id="@+id/regdt"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            tools:text="2022.07.28.18:08"
            app:layout_constraintEnd_toStartOf="@+id/checkAll"
            app:layout_constraintTop_toTopOf="@+id/tableNo"
            app:layout_constraintBottom_toBottomOf="@+id/tableNo"/>

        <CheckBox
            android:id="@+id/checkAll"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:button="@null"
            android:background="@drawable/selector_check_cart"
            app:layout_constraintTop_toTopOf="@+id/tableNo"
            app:layout_constraintBottom_toBottomOf="@+id/tableNo"
            app:layout_constraintEnd_toEndOf="@+id/tableNo"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tableNo"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/list_order_detail"
            tools:itemCount="5"/>

        <LinearLayout
            android:id="@+id/arrowUp"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/tableNo">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_up"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrowDown"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/right"
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="center">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/et_291"/>
            <TextView
                style="@style/text22"
                android:id="@+id/status"
                android:layout_marginTop="3dp"
                android:text="@string/good"/>
        </LinearLayout>

        <View
            style="@style/margin_4_f9"/>

        <TextView
            style="@style/btn_pay"
            android:id="@+id/dutch"
            android:text="@string/order_dutchpay"/>

        <View
            style="@style/margin_4_f9"/>

    </LinearLayout>

    <TextView
        android:id="@+id/info1"
        style="@style/text24b"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/order_pay_info1"
        android:textColor="#426493"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        style="@style/subtext"
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/order_pay_info2"
        app:layout_constraintStart_toStartOf="@+id/info1"
        app:layout_constraintTop_toBottomOf="@+id/info1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/bg_r6w"
        app:layout_constraintEnd_toStartOf="@+id/right"
        app:layout_constraintStart_toEndOf="@+id/left"
        app:layout_constraintTop_toBottomOf="@+id/info2">

        <TextView
            style="@style/text24"
            android:id="@+id/totGea"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="총 4개"/>

        <TextView
            style="@style/text_num_b"
            android:id="@+id/totPrice"
            android:textSize="30sp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="@+id/won"
            app:layout_constraintEnd_toStartOf="@+id/won"
            app:layout_constraintBottom_toBottomOf="@+id/won"
            tools:text = "35,300"/>

        <TextView
            style="@style/text24"
            android:id="@+id/won"
            android:text="@string/won"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_charge"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_r6w"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/cl_order"
        app:layout_constraintEnd_toStartOf="@+id/payment"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/cl_order">

        <TextView
            style="@style/text24b"
            android:text="@string/order_pay_charge"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/text_num_b"
            android:id="@+id/chargePrice"
            android:layout_marginEnd="4dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/won2"
            app:layout_constraintEnd_toStartOf="@+id/won2"
            app:layout_constraintTop_toTopOf="@+id/won2"
            tools:text="18,000" />

        <TextView
            android:id="@+id/won2"
            style="@style/text24"
            android:text="@string/won"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        style="@style/text24b"
        android:id="@+id/payment"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text="@string/btn_payment"
        android:background="@drawable/bg_btn_r6_grd"
        app:layout_constraintTop_toTopOf="@+id/cl_charge"
        app:layout_constraintEnd_toEndOf="@+id/cl_order"
        app:layout_constraintStart_toEndOf="@+id/cl_charge"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_remain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="@+id/cl_charge"
        app:layout_constraintEnd_toEndOf="@+id/cl_charge"
        app:layout_constraintTop_toBottomOf="@+id/cl_charge">
        <TextView
            style="@style/text24"
            android:text="@string/order_pay_remain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/text_num"
            android:id="@+id/remainPrice"
            android:layout_marginEnd="4dp"
            android:text="@string/zero"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/won3"
            app:layout_constraintTop_toTopOf="@+id/won3"
            app:layout_constraintBottom_toBottomOf="@+id/won3" />

        <TextView
            android:id="@+id/won3"
            style="@style/text24"
            android:text="@string/won"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        style="@style/subtext"
        android:layout_marginTop="80dp"
        android:text="@string/order_pay_info3"
        app:layout_constraintStart_toStartOf="@+id/cl_remain"
        app:layout_constraintTop_toBottomOf="@+id/cl_remain"/>

</androidx.constraintlayout.widget.ConstraintLayout>