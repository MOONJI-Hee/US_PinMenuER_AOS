<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="920dp"
        android:layout_height="720dp"
        android:background="@drawable/bg_r10w">
        <TextView
            style="@style/text22b"
            android:id="@+id/title"
            android:text="@string/option_require"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_popup_close"/>
        </LinearLayout>
        <TextView
            style="@style/text18"
            android:id="@+id/opt_name_title"
            android:layout_marginEnd="16dp"
            android:text="@string/opt_req_name"
            app:layout_constraintEnd_toStartOf="@+id/opt_name"
            app:layout_constraintTop_toTopOf="@+id/opt_name"
            app:layout_constraintBottom_toBottomOf="@+id/opt_name" />
        <EditText
            style="@style/edittext_main"
            android:id="@+id/opt_name"
            android:layout_marginTop="32dp"
            android:hint="@string/opt_name_hint"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_opt_val"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="37dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/opt_name"
            app:layout_constraintTop_toBottomOf="@+id/opt_name"
            app:layout_constraintBottom_toTopOf="@+id/save"/>

        <TextView
            style="@style/btn_cancel"
            android:id="@+id/delete"
            android:layout_width="240dp"
            android:layout_marginEnd="20dp"
            android:text="@string/delete"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/opt_name"
            app:layout_constraintEnd_toStartOf="@+id/save"
            app:layout_constraintBottom_toBottomOf="@+id/save"/>

        <TextView
            android:id="@+id/save"
            style="@style/btn"
            android:layout_width="0dp"
            android:layout_marginBottom="32dp"
            android:text="@string/confirm"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/opt_info1"
            app:layout_constraintEnd_toEndOf="@+id/opt_name"
            app:layout_constraintStart_toEndOf="@+id/delete" />

        <TextView
            style="@style/subtext"
            android:id="@+id/opt_info1"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="10dp"
            android:text="@string/opt_req_info1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/opt_info2"/>
        <TextView
            style="@style/subtext"
            android:id="@+id/opt_info2"
            android:layout_marginBottom="40dp"
            android:text="@string/opt_req_info2"
            app:layout_constraintStart_toStartOf="@+id/opt_info1"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>