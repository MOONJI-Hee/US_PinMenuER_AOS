<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="920dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_r10w">

        <LinearLayout
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_popup_close" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/text22"
            android:layout_marginTop="60dp"
            android:text="@string/order_select_pay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btnQR"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_r6w"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/btnCard"
            app:layout_constraintEnd_toStartOf="@+id/btnCard"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnCard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_pay_qrcode_160" />
        </LinearLayout>

        <TextView
            style="@style/text24b"
            android:id="@+id/tvQr"
            android:layout_marginTop="13dp"
            android:text="@string/order_pay_qr"
            app:layout_constraintStart_toStartOf="@+id/btnQR"
            app:layout_constraintEnd_toEndOf="@+id/btnQR"
            app:layout_constraintTop_toBottomOf="@+id/btnQR"/>

        <TextView
            style="@style/text16"
            android:text="@string/order_pay_qr_bank"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvQr"
            app:layout_constraintStart_toStartOf="@+id/tvQr"
            app:layout_constraintTop_toBottomOf="@+id/tvQr" />

        <LinearLayout
            android:id="@+id/btnCard"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_r6w"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/btnComplete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnQR"
            app:layout_constraintTop_toBottomOf="@+id/title">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_pay_cardread_160" />
        </LinearLayout>

        <TextView
            style="@style/text24b"
            android:id="@+id/tvCard"
            android:layout_marginTop="13dp"
            android:text="@string/order_pay_card"
            app:layout_constraintEnd_toEndOf="@+id/btnCard"
            app:layout_constraintStart_toStartOf="@+id/btnCard"
            app:layout_constraintTop_toBottomOf="@+id/btnCard" />

        <LinearLayout
            android:id="@+id/btnComplete"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_r6w"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/btnCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnCard"
            app:layout_constraintTop_toTopOf="@+id/btnCard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_pay_complete_160" />
        </LinearLayout>

        <TextView
            style="@style/text24b"
            android:layout_marginTop="13dp"
            android:text="@string/order_complete"
            app:layout_constraintStart_toStartOf="@+id/btnComplete"
            app:layout_constraintEnd_toEndOf="@+id/btnComplete"
            app:layout_constraintTop_toBottomOf="@+id/btnComplete"/>

        <View
            android:id="@+id/unableQR"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white75"
            android:visibility="gone"
            android:focusable="true"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="@id/btnQR"
            app:layout_constraintEnd_toEndOf="@id/btnQR"
            app:layout_constraintTop_toTopOf="@id/btnQR"
            app:layout_constraintBottom_toBottomOf="@+id/tvQr"/>

        <View
            android:id="@+id/unableCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white75"
            android:visibility="gone"
            android:focusable="true"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="@id/btnCard"
            app:layout_constraintEnd_toEndOf="@id/btnCard"
            app:layout_constraintTop_toTopOf="@id/btnCard"
            app:layout_constraintBottom_toBottomOf="@+id/tvCard"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>