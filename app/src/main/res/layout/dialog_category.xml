<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="920dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_r11w">
        <TextView
            style="@style/text22b"
            android:id="@+id/title"
            android:text="@string/title_cate_add"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_popup_close"/>
        </LinearLayout>
        <TextView
            style="@style/text18"
            android:layout_marginEnd="16dp"
            android:text="@string/category_name"
            app:layout_constraintEnd_toStartOf="@+id/et_name"
            app:layout_constraintTop_toTopOf="@+id/et_name"
            app:layout_constraintBottom_toBottomOf="@+id/et_name" />
        <EditText
            style="@style/edittext_main"
            android:id="@+id/et_name"
            android:layout_marginTop="60dp"
            android:hint="@string/category_name_hint"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            style="@style/text18"
            android:layout_marginEnd="16dp"
            android:text="@string/category_exp"
            app:layout_constraintEnd_toStartOf="@+id/et_exp"
            app:layout_constraintTop_toTopOf="@+id/et_exp"
            app:layout_constraintBottom_toBottomOf="@+id/et_exp" />
        <EditText
            style="@style/edittext_main"
            android:id="@+id/et_exp"
            android:layout_marginTop="32dp"
            android:hint="@string/category_exp_hint"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_udt"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_exp"
            app:layout_constraintBottom_toTopOf="@+id/cate_info">
            <TextView
                style="@style/btn_cancel"
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:text="@string/btn_delete" />
            <TextView
                style="@style/btn"
                android:id="@+id/modify"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/btn_save"/>
        </LinearLayout>
        <TextView
            style="@style/btn_main"
            android:id="@+id/save"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:text="@string/btn_save"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_exp"
            app:layout_constraintBottom_toTopOf="@+id/cate_info"/>

        <TextView
            style="@style/subtext"
            android:id="@+id/cate_info"
            android:layout_marginBottom="60dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/category_dialog_info1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/et_exp" />

        <TextView
            style="@style/text16"
            android:layout_marginEnd="9dp"
            android:text="@string/category_hide"
            app:layout_constraintEnd_toStartOf="@+id/cate_use"
            app:layout_constraintTop_toTopOf="@+id/cate_use"
            app:layout_constraintBottom_toBottomOf="@+id/cate_use"/>
        <CheckBox
            style="@style/toggle"
            android:id="@+id/cate_use"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/et_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>